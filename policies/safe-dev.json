{
  "version": "v1",
  "rules": [
    {
      "id": "safe-dev-read-workspace",
      "action_type": "fs.read",
      "resource": "file://workspace/**",
      "decision": "ALLOW"
    },
    {
      "id": "safe-dev-write-workspace",
      "action_type": "fs.write",
      "resource": "file://workspace/**",
      "decision": "ALLOW",
      "obligations": {
        "sandbox_mode": "local"
      }
    },
    {
      "id": "safe-dev-apply-patch",
      "action_type": "repo.apply_patch",
      "resource": "repo://local/workspace",
      "decision": "ALLOW",
      "obligations": {
        "sandbox_mode": "local"
      }
    }
  ]
}
